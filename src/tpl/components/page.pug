extends ../layouts/base

block main
    section.page
        aside.page__aside
            nav.page__nav
                div
                    | !{buttonOpenModalAddChat}
                    | !{buttonOpenModalAddUserInChat}
                    | !{buttonOpenModalDeleteUserInChat}
                | !{linkProfile}
            block.search
                form.search__form(id="formSearch" name="formSearch")
                        input.search__field(
                        type="text"
                        placeholder="Поиск"
                        name="search")
                button.search__button
            block aside
        div.page__content
            block content
    div.popup.popup__add-chat.hide
        div.popup__content
            form.popup__form(id='formInput', name='formInput')
                input.popup__input(
                    type="text"
                    placeholder="Название чата"
                    name="nameChats")
                | !{buttonAddChat}
                button.popup__button Отмена
    div.popup.popup__edit-chat.hide
        div.popup__content
            | !{formAddUserInChat}
    div.popup.popup__delete-user.hide
        div.popup__content
            | !{formDeleteUserInChat}

