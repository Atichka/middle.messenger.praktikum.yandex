extends ../components/page

block main
    div.profile
        div.profile__container
            button.profile__button-back(onclick="window.location.href = './chats.html'") ←
        div.profile__main
                    div.profile__photo
                        img.profile__pic
                    form(id="formPassword", name="formPassword", onsubmit="sendData(this); return false;")
                        div.profile__info
                            div.profile__row
                                p.profile__text Старый пароль
                                input.profile__input.text__grey.profile__text(
                                    id="oldPassword",
                                    type="password",
                                    name="oldPassword",
                                    required,
                                    placeholder="Пароль")
                            div.profile__row
                                p.profile__text Новый пароль
                                input.profile__input.text__grey.profile__text(
                                    id="newPassword",
                                    type="password",
                                    name="newPassword",
                                    required,
                                    placeholder="Пароль")
                            div.profile__row
                                p.profile__text Повторить новый пароль
                                input.profile__input.text__grey.profile__text(
                                    id="newPasswordRepeat",
                                    type="password",
                                    name="newPasswordRepeat",
                                    required,
                                    placeholder="Пароль")
                            span.profile__error Пароли не совпадают
                        button.profile__button(type="submit") Сохранить
