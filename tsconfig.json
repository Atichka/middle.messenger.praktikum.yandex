{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2015", "es2018", "dom", "dom.iterable"],
    "outDir": "./dist/js",
    "rootDir": "./src",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  }
}
